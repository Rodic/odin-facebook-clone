= form_for(@profile) do |f|
  = f.label :about_me
  = f.text_area :about_me

  = f.label :gender
  = f.select(:gender, %w{ Female Male Other}.map { |g| [ g, g ] })

  = f.label :age
  = f.select(:age, (1..120).map { |n| [ n, n ] })

  = f.label :city
  = f.text_field :city
  
  = f.label :country
  = f.text_field :country

  = f.label :work
  = f.text_field :work

  = f.hidden_field :user_id, value: current_user.id

  = f.submit "Update"
